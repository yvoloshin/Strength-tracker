
<div class="col-xs-10 col-xs-offset-1">
  <h1>My Workout History</h1>

  <table class="table table-bordered table-striped table-responsive">
    <thead>
      <tr>
        <th><%= "Date" %></th>
        <th><%= "Routine Name" %></th>
        <th><%= "Actions" %></th>
      </tr>
    </thead>
    <tbody>
      <% @workouts.each do |workout| %>
        <tr>
          <td><%= workout.created_at.strftime "%B %e, %Y" %></td>
          <td><%= workout.workout_type_name %></td>
          <td>	
  					<%= link_to user_workout_path(workout.user, workout), :class => 'btn btn-primary' do %>
  						View &nbsp;
  						<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
  					<% end %>
  					<a class="openModal btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-workoutid="<%=workout.id%>" data-userid="<%=workout.user.id%>" style="cursor:pointer">Delete
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
  				</td>    
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />

  <strong>   
    <i class="glyphicon glyphicon-download-alt"></i>Download workout history:
      <%= link_to "CSV", user_workouts_path(current_user, format: "csv") %> |   
      <%= link_to "XLS", user_workouts_path(current_user, format: "xls") %>
  </strong>

</div>

<!-- Small modal -->


<div class="modal fade bs-example-modal-sm" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Warning</h4>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this workout?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <a id="delete-button" class="btn btn-danger" role="button">Delete</a>
      </div>
    </div>
  </div>
</div>

<script>
        $(document).on("click", ".openModal", function () {
            var user_id = $(this).data('userid');
            var workout_id = $(this).data('workoutid');
            console.log(user_id);
            console.log(workout_id);
            $(document).on("click", "#delete-button", function () {
                url = '/users/'+user_id+'/workouts/'+workout_id;
                console.log(url);
                $.ajax({
                  url: url,
                  type: 'DELETE',
                  success: window.location.href = '/users/'+user_id+'/workouts/'            
                  });
            });
        });
    </script>




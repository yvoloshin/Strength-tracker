
<div class="col-xs-10 col-xs-offset-1">
  <h1>My Workout History</h1>

  <table class="table table-bordered table-striped table-responsive">
    <thead>
      <tr>
        <th><%= "Date" %></th>
        <th><%= "Routine Name" %></th>
        <th><%= "Actions" %></th>
      </tr>
    </thead>
    <tbody>
      <% @workouts.each do |workout| %>
        <tr>
          <td><%= workout.created_at.strftime "%B %e, %Y" %></td>
          <td><%= workout.workout_type_name %></td>
          <td>	
  					<%= link_to user_workout_path(workout.user, workout), :class => 'btn btn-primary' do %>
  						View &nbsp;
  						<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
  					<% end %>
            <%= link_to edit_user_workout_path(workout.user, workout), :class => 'btn btn-primary' do %>
                  Edit &nbsp;
                  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <% end %>
  					<%= link_to user_workout_path(workout.user, workout), method: :delete, data: {confirm: "Are you sure you want to delete this workout?"}, :class => 'btn btn-danger' do %>
               Delete &nbsp;
               <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
             <% end %>
             <%= link_to new_workout_type_workout_path(workout.workout_type_id), :class => 'btn btn-primary' do %>
              Repeat &nbsp;
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
  				</td>    
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />

  <div class="download-link">
    <strong>   
      <i class="glyphicon glyphicon-download-alt"></i>Download workout history:
        <%= link_to "CSV", user_workouts_path(current_user, format: "csv") %> |   
        <%= link_to "XLS", user_workouts_path(current_user, format: "xls") %>
    </strong>
  </div>

  <div class="back-link col-xs-10 col-xs-offset-1">
      <%= link_to workout_types_path do %>
      <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>
      Back to List of Routines &nbsp;
      <% end %>
  </div>  

</div>
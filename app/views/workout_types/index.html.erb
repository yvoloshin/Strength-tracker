<h1>Every Pound Counts!<h1>

	<% @workout_types.each do |workout_type| %>
		<% if workout_type.public == true || workout_type.user == current_user %>
			<div class="workout-box col-xs-10 col-xs-offset-1">
				<%= workout_type.type_name %><br />
				<% workout_type.exercise_types.each do |exercise_type| %>
					<p>
						<%= exercise_type.name %>
					</p>
				<% end %>
				
				<% if workout_type.user.present? %>
	      	<small><%= workout_type.user.email %></small>
	    	<% end %>
	    	<br />
	    	<div>
		    	<%= link_to 'View Workout', workout_type_path(workout_type), :class => "btn btn-primary"  %>
					<%= link_to 'Record Your Results', new_workout_type_workout_path(workout_type), :class => "btn btn-primary"  %>
				</div>
			</div>
		<% end %>	
	<% end %>